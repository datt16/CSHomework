                <TextBlock
                    Margin="{StaticResource SmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="ポイントの詳細" />
                <TextBlock Style="{StaticResource DetailBodyStyle}" Text="Coming Soon"/>
                <TextBlock Width="1000"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
