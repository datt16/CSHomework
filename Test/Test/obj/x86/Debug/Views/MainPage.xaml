<Page x:ConnectionId='1'
    x:Class="Test.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            x:Uid="Main_Title"
            Style="{StaticResource PageTitleStyle}" />
        <Grid
            Grid.Row="1" 
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel x:ConnectionId='3' x:Name="HeaderPanel" Orientation="Horizontal" Grid.Row="0">
            </StackPanel>
            <Grid Grid.Row="1">
                <Image Source="Assets\StoreLogo.png" />
                <InkCanvas x:ConnectionId='4' x:Name="inkCanvas" />
                <InkToolbar x:ConnectionId='5' x:Name="inkToolbar"
          VerticalAlignment="Top"
                                               />
            </Grid>
        </Grid>
    </Grid>
</Page>

